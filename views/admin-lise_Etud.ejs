<html lang="fr">

<head>
  <%- include('./partials/head2', { title: 'Users' }); %>

  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>


  	<div class="header">
		<a href="https://www.institut-grasset.qc.ca"><img src="images/IGR_logo_blac.jpg"
			alt="Present Free HTML5 Bootstrap Template">
		</a>

		<div class="header-right">
			<nav class="header-right">
				<div class="container-fluid">
					<ul class="nav navbar-nav">
						<li class="dropdown"><a class="active" class="dropdown-toggle" data-toggle="dropdown" href="#">Liste <span
							class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><a href="admin-lise_admins">Les admins </a></li>
							<li><a href="admin-lise_Ensg">Les ensiegnants</a></li>
							<li><a class="active" href="admin-lise_Etud">Tous les Etudiants</a></li>
							<li><a href="admin-lise_EtudATT">Les etudiants en attente </a></li>
						</ul>
						</li>
						<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" href="#">Profil <span
							class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><a href="admin-Mprofil">Modifier profile</a></li>
							<li><a href="admin-motPasse">Changer le mot de passe </a></li>
							<li><a href="">Desactiver le compte</a></li>
						</ul>
						</li>
						<li>
						<form method="post" action="/logout"><button class="button2" type="submit">D&eacute;connexion</button>
						</form>
						</li>
					</ul>
				</div>
			</nav>
		</div>
  	</div>


	<!-- END #fh5co-header -->
	<div class="page-content2">

		<h1 class="no-margin">Liste des etudiants</h1> 


	</div>
	<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">

	<table id="myTable">
		<tr class="header">
			<th style="width:60%;">Prenom</th>
			<th style="width:60%;">Nom</th>
			<th style="width:20%;">DA</th>
			<th style="width:80%;">Programme</th>
			<th style="width:30%;">Epingler</th>
			<th style="width:30%;">Etat de Portifolio</th>
			<th style="width:40%;"> <i class="fa fa-trash"></i> <a href="createStudentAccount">+Ajouter Etudiant</a>
		</tr>

    	<% for(i=0; i<resultat.length; i++) { %>
			<tr>
				<td><%= resultat[i].student_name %></td>
				<td><%= resultat[i].student_surname %></td>
				<td><%= resultat[i].student_DA %></td>
				<td><%= resultat[i].program_name %></td>
				<td>
					<label class="switch">
						<% if(resultat[i].student_tagged) { %>
							<input type="checkbox" id="etat-<%= resultat[i].student_DA %>" onchange="doTag('<%= resultat[i].student_DA %>')" checked>
						<% } else { %>
							<input type="checkbox" id="etat-<%= resultat[i].student_DA %>" onchange="doTag('<%= resultat[i].student_DA %>')">
						<% } %>
						<span class="slider"></span>
			  		</label>
				</td>
				<td>
					<label class="switch">
						<% if(resultat[i].student_portfolio_active) { %>
							<input type="checkbox" id="active-<%= resultat[i].student_DA %>" onchange="doPortfolioActive('<%= resultat[i].student_DA %>')" checked>
						<% } else { %>
							<input type="checkbox" id="active-<%= resultat[i].student_DA %>" onchange="doPortfolioActive('<%= resultat[i].student_DA %>')">
						<% } %>
						<span class="slider"></span>
			  		</label>
				</td>
				<td ><input type="button" class="btn" value="Supprimer" onclick="supprimer('<%= resultat[i].student_DA %>')"></td>
			</tr>
   	 	<% } %>

  	</table>

  <!-- END .container-fluid -->

  <!-- END #fh5co-footer -->

  <!-- jQuery -->
  <script src="javascripts/js/jquery.min.js"></script>
  <!-- Bootstrap -->
  <script src="javascripts/js/bootstrap.min.js"></script>
  <!-- masonry -->
  <script src="javascripts/js/jquery.masonry.min.js"></script>
  <!-- MAIN JS -->
  <script src="javascripts/js/main.js"></script>
  <script>
    function myFunction() {
      // Declare variables
      var input, filter, table, tr, td, i, txtValue;
      input = document.getElementById("myInput");
      filter = input.value.toUpperCase();
      table = document.getElementById("myTable");
      tr = table.getElementsByTagName("tr");

      // Loop through all table rows, and hide those who don't match the search query
      for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[0];
        if (td) {
          txtValue = td.textContent || td.innerText;
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            tr[i].style.display = "";
          } else {
            tr[i].style.display = "none";
          }
        }
      }
    }

	function supprimer(id) {
		var retVal = confirm(`Voulez-vous supprimer le Ã‰tudiant ${id}?`);
		if( retVal === false ) {
			return;
		}

      let pointFinal = "/admin-lise_Etud/" + id
      fetch(pointFinal, {method : "DELETE"})
      .then((reponse)=> reponse.json())
      .then((donnee)=> window.location.href = donnee.routeRacine)
      .catch((erreur)=> console.log(erreur))
    }

	async function doTag(userId) {
      var element = document.getElementById("etat-" + userId);

      if (element.checked) {
        await fetch('/admin-lise_Etud/student/etat', {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            userId: userId,
            status: true
          })
        });
      } else {
        await fetch('/admin-lise_Etud/student/etat', {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            userId: userId,
            status: false
          })
        });
      }

      window.location.reload();
    }

	async function doPortfolioActive(userId) {
      var element = document.getElementById("active-" + userId);

      if (element.checked) {
        await fetch('/admin-lise_Etud/portfolio/etat', {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            userId: userId,
            status: true
          })
        });
      } else {
        await fetch('/admin-lise_Etud/portfolio/etat', {
          method: 'POST',
          headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            userId: userId,
            status: false
          })
        });
      }

      window.location.reload();
    }
  </script>
</body>
