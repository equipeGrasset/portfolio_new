<!doctype html>
<html lang="fr">

<head>
    <%- include('./partials/head', { title: "Inscription" }); %>
    <link href="stylesheets/auth5.css" rel="stylesheet" type="text/css">
    <link href="stylesheets/auth4.css" rel="stylesheet" type="text/css">

    <!--encadrer-->
    <style>
        .encadrer_texte {
        width: fit-content;
        border: 2px solid rgb(219, 219, 219);
        padding-top: 10px;
        padding-left: 5px;
        padding-right: 0px;
        padding-bottom: 0px;
        
        margin: 0px;
        }
    </style>
	<script>
		function showContent(){
			var formDivOptions = document.getElementById("formDivOptions");
			formDivOptions.style.display = "none";
		}
	</script>
 </head>

<body onload="showContent()">
<img src="images/IGR_logo_blac.jpg"alt="Trulli" width="200" height="85" >
<div id="tsparticles"></div>
<main class="box">
    <h2>Inscription</h2>
    <form method="POST" action="/createAccount">
	
		
		<div class="inputBox">
			<div style="margin: 0px 00px 40px 0px;">
				<legend style="font-size: 17px; color:white ; ">Choisissez le role pour l'utilisateur : </legend>
				<select id="userRole" name="userRole" style="margin: 10px 0px 0px 00px;" onchange="showTypeRole()">
					<option value="3">Administrateur</option>
					<option value="2">Enseignant</option>
				</select>
			</div>
		</div>
		<div style="margin: 0px 00px 10px 0px;"><span id="wrong_userRole_alert" ></span> </div>	
		
		<div id="formDivOptions">
		
			<div id="numeroEmployee" class="inputBox">
				<label for="userId">Numéro d'employé</label>
				<input 
					type="text"
					name="userId" 
					id="username" 
					placeholder="Rentrez le numéro" 
					required onkeyup="validate_id()"/>
			</div>
			<div style="margin: 0px 00px 10px 0px;"><span id="wrong_id_alert" ></span> </div>
			
			<div id="divName" class="inputBox">
				<label for="name">Nom</label>
				<input type="text" 
				 name="name" 
				id="alphaNom" 
				placeholder="Rentrez votre nom" 
				required onkeypress="validate_alphaNom()"/>
			</div>
			<div style="margin: 0px 00px 10px 0px;"><span id="wrong_nom_alert" ></span> </div>

			<div id="divSurname" class="inputBox">
				<label for="surname">Prénom</label>
				<input type="text" 
					name="surname"
					id="alphaPrenom" 
					placeholder="Rentrez votre Prénom" 
					required onkeypress="validate_alphaPrenom()"/>
			</div>
			<div style="margin: 0px 00px 10px 0px;"><span id="wrong_alphaPrenom_alert" ></span> </div>

			<fieldset id="profSelectionProgramme">
				<legend style="font-size: 17px; color:white">  Choisissez un programme : </legend>
					<div class="inputBox">
						<div style="font-size: 15px">
							<p style="color: white; margin: 20px 5px 0px 0px;">Maintenir enfoncé le bouton Ctrl (windows) ou Commande (Mac) pour sélectionner plusieurs programmes.</p>
						</div>
						<select id="programmes" name="programmes" style="margin: 10px 0px 0px 00px;" size="4" multiple>
							<option value="1">Techniques de l'informatique profil programmation nouveaux médias</option>
							<option value="2">Techniques d'inspection en bâtiment</option>
							<option value="3">Tech. de l'est. et de l'éva. en bâtiment, spécialisation en est. en construction</option>
							<option value="4">Tech. de l'est. et de l'éva. en bâtiment, spécialisation en éval. immobilière</option>
							<option value="5">Composition et effets spéciaux pour vidéo numérique</option>
							<option value="6">Production 3D pour jeux vidéo</option>
							<option value="7">Production multimédia, profil web et médias sociaux</option>
							<option value="8">Production télévisuelle et cinématographique</option>
							<option value="9">Spécialiste en réalité virtuelle et augmentée</option>
							<option value="10">Techniques d'animation 3D et de synthèse d'images</option>
							<option value="11">Techniques de montage et d'habillage infographique</option>
							<option value="12">Techniques de production et de postproduction télévisuelles</option>
							<option value="13">Sténographie judiciaire</option>
						</select>
					</div>
			</fieldset>

			<div id="divTelefone">
				<div class="inputBox" style="margin: 30px 0px 0 0px;">
					<label for="telephone">Téléphone</label>
					<input type="text" 
					name="telephone" 
					id="phone" 
					placeholder="Rentrez le numéro de téléphone xxx-xxx-xxxx " 
					onkeyup="validate_phone()"/>
				</div>
				<div style="margin: 0px 00px 10px 0px;"><span id="wrong_phone_alert" ></span> </div>
			</div>

			<div id="divEmail" class="inputBox" >
				<label for="email">Courriel professionnel</label>
				<input type="text" 
				name="email" 
				id="mail" 
				placeholder="Rentrez le courriel " 
				onkeyup="validate_mail()"/>
			</div>
			<div style="margin: 0px 00px 10px 0px;"><span id="wrong_mail_alert" ></span> </div>

			<div id="divPassword" class="inputBox">
				<label >Mot de passe temporaire</label>
				<input id="password"
						type="password" 
						name="password" 
						placeholder="Rentrez votre mot de passe"
						required onkeyup="validate_password()"/>
						
				<div style="margin: 10px 0px -10px 0px;">
					<label>Confirmez votre mot de passe</label>
					<input id="confirm_pass"
							type="password" 
							name="userPassword"  
							placeholder="Confirmez votre mot de passe"
							required onkeyup="validate_password()"/> 
				</div>
			</div>
			<div style="margin: 0px 00px 10px 0px;"><span id="wrong_pass_alert" ></span> </div>

			<div id="divSecreteQuestion" class="encadrer_texte">
				<div class="inputBox">
					<label for="userConfirmPassword">Question secréte 1 : Dans quelle ville se sont rencontrés vos parents ? </label>
					<input type="text" 
					name="questionSecrete_1" 
					id="alphaQ1" 
					placeholder="Donnez votre réponse"
					required onkeyup="validate_alphaQ1()"/>
				</div>
				<div style="margin: 0px 00px 10px 0px;"><span id='wrong_alphaQ1_alert'></span> </div>

				<div class="inputBox">
					<label for="userConfirmPassword">Question secréte 2 : Quel était le métier de votre grand-père ?</label>
					<input type="text" 
					name="questionSecrete_2" 
					id="alphaQ2" 
					placeholder="Donnez votre réponse"
					required onkeyup="validate_alphaQ2()"/>
				</div>
				<div style="margin: 0px 00px 10px 0px;"><span id='wrong_alphaQ2_alert'></span> </div>
			</div>
	
	
			<% if(msg) { %>
                <div style="margin: 0px 00px 10px 0px;">
                    <span style="color: red; font-weight: bold;">
                        <%= msg %>
                    </span>
                </div>
            <%}%>

    
			<div id="divButtonValider" style="margin: 30px 10px 10px 143px;">
				<button id="create" value="createAccount" type="submit" style="float: left;">Valider l'Inscription</button>
				<br/>
				<br/>
			</div>
		</div>
		
		
		<div style="margin: 2px 10px 20px 195px;">
			<a class="button" href="users" style="float: left;">Annuler</a>
		</div>

    </form>
</main>
<footer>
    <%- include('./partials/footer'); %>
</footer>

</body>
    <script src="javascripts/style.js"></script>
</html>
