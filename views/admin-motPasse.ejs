<!DOCTYPE html>
<html lang="fr">
  	<head>
		<%- include('./partials/head2', { title: 'Users' }); %>
	
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<style>
			* {
			box-sizing: border-box;
			}
			
			input[type=text], select, textarea {
			width: 100%;
			padding: 12px;
			border: 1px solid #ccc;
			border-radius: 4px;
			resize: vertical;
			}
			
			label {
			padding: 12px 12px 12px 0;
			display: inline-block;
			}
			
			input[type=submit] {
			background-color: #0A3656;
			color: white;
			padding: 12px 46%;
			border: none;
			border-radius: 4px;
			cursor: pointer;
			float: right;
			}
			
			input[type=submit]:hover {
			background-color: #0A3656;
			}
			
			.container {
			border-radius: 5px;
			background-color: #f2f2f2;
			padding: 20px;
			}
			
			.col-25 {
			float: left;
			width: 55%;
			margin-top: 6px;
			}
			
			.col-75 {
			float: left;
			width: 100%;
			margin-top: 6px;
			}
			
			/* Clear floats after the columns */
			.row:after {
			content: "";
			display: table;
			clear: both;
			}
			
			/* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
			@media screen and (max-width: 600px) {
			.col-25, .col-75, input[type=submit] {
				width: 100%;
				margin-top: 0;
			}
			}
		</style>
	</head>

	<body>

		

		<div class="header">
			<a href="https://www.institut-grasset.qc.ca"><img src="images/IGR_logo_blac.jpg" alt="Present Free HTML5 Bootstrap Template"></a>
			
			<div class="header-right">
				<nav class="header-right">
					<div class="container-fluid">

						<ul class="nav navbar-nav">  
							<li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Liste <span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li><a href="admin-lise_admins">Les admins </a></li>
									<li><a  href="admin-lise_Ensg">Les ensiegnants</a></li>
									<li><a  href="admin-lise_Etud">Tous les Etudiants</a></li>
									<li><a  href="admin-lise_EtudATT">Les etudiants en attente </a></li>
								</ul>
							</li>

							<li class="dropdown"><a class="active"  href="#" class="dropdown-toggle" data-toggle="dropdown" href="#">Profil <span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li><a href="admin-Mprofil">Modifier profile</a></li>
									<li><a class="active" href="admin-motPasse">Changer le mot de passe </a></li>
									<li><a href="">Desactiver le compte</a></li>
								</ul>
							</li> 
							<li><form method="post" action="/logout" ><button class="button2" type="submit">D&eacute;connexion</button></form></li>  
						</ul>
					</div>
				</nav>
			</div>
		</div>


		
		<!-- END #fh5co-header -->
		<div class="page-content2">

			<h1 class="no-margin">Modifier Profil</h1>

		</div>
		

		<section id="formUpdatePassword">

			<div class="container">
				<form action="/admin-motPasse" method="POST">
				
							
					<div>
						<div class="row">
							<div class="col-75">
								<label for="fname">Nouveau mot de passe</label>
							</div>

							<div class="col-75">
							
								<input type="password" 
								id="password" 
								name="password" 
								placeholder="Votre mot de passe.."
								required onkeyup="validate_password()">		
							</div>
						</div>
						<!-- <div style="margin: 0px 00px 10px 0px;"><span id="wrong_pass_alert" ></span> </div> -->
						<!-- <span id="wrong_pass_alert"></span> -->
						

						<div class="row">
							<div class="col-75">
								<label for="fname">Confirmation du mot de passe</label>
							</div>
							<div class="col-75">
								
								<input type="password" 
								id="confirm_pass"
								name="userPassword" 
								placeholder="Confirmer votre mot de passe.."
								required onkeyup="validate_password()">
							</div>
						</div>
						<!-- <div style="margin: 0px 00px 10px 0px;"><span id="wrong_pass_alert" ></span> </div> -->
						<span id="wrong_pass_alert"></span>
						
						<div class="row">
							<div class="col-75">

								<input type="submit" 
								id ="create"
								value="Enregistrer">
							</div>
						</div>
					
					</div>
					<br>
				
				</form>
			</div>
		</section>

		<%if ("isStatus" === 'success') { %>
			<section id="responseUpdatePassword">

				<div id="modal">
					<%= msg %>
				</div>
				<div>
					<button type="button">
						OK
					</button>
				</div>

			</section>
		<% } %>
		
	
		
		<!-- END #fh5co-footer -->

		<!-- jQuery -->
		<script src="javascripts/js/jquery.min.js"></script>
		<!-- Bootstrap -->
		<script src="javascripts/js/bootstrap.min.js"></script>
		<!-- masonry -->
		<script src="javascripts/js/jquery.masonry.min.js"></script>
		<!-- MAIN JS -->
		<script src="javascripts/js/main.js"></script>
		
	</body>
	<footer id="footer" role="contentinfo">
		<%- include('./partials/footer'); %>
	</footer>
